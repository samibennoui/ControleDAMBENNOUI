<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ControleDAMBENNOUI.Hello"
             Title="Hello">
    <StackLayout>
        <Label 
            Text="Entrer le mot de pass"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry x:Name="valider" Placeholder="Mot de passe" IsPassword="True" Margin="0,0,0,20"/>
        <Button Text="Valider" Clicked="Button_Clicked_2"/>
        <Label x:Name="message"  TextColor="Red" FontSize="18" Margin="0,20,0,0"/>

    </StackLayout>
</ContentPage>